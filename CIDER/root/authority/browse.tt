[% page.title = list_name _ 's' %]

<h2>[% page.title %]</h2>

[% IF added %]
<div class="success">
<p>Added [% list_name %] "[% new_name %]".</p> 
</div>
[% END %]

[% form %]

<table>
<thead>
<tr>
<th>Name</th>
[% IF notes %]<th>Note</th>[% END %]
</tr>
</thead>
<tbody>
[% FOR authority IN list.all %]
<tr>
<td>[% authority.name %]</td>
[% IF notes %]<td>[% authority.note %]</td>[% END %]
</tr>
[% END %]
</tbody>
</table>
